// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int arr[10];
    int n,search,left=0,right,pos= -1;
    printf("Enter the size of the array");
    scanf("%d",&n);
    printf("enter the  array elements");
    for(int i= 0;i<n;i++)
    scanf("%d",arr[i]);
    printf("Enter the search element");
    scanf("%d",&search);
    right=n-1;
    while(left<=right)
    {
        if(arr[left]==search)
        {
        pos=left;
        printf("search element found at %d",pos+1);
        break;
        }
        if(arr[right]==search)
        {
        pos=right;
        printf("search element found at %d",pos+1);
        break;
        }
        left++;
        right--;
    }
    if(pos==-1)
    printf("Element not found");
     
    
    
    return 0;
}

